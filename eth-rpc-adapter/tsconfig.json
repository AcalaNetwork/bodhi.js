{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "outDir": "lib",
    "rootDirs": ["src", "/node_modules"],

    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "benchmarks/*", "migrations/*", "**/e2e/*", "**/tests/*"]
}
