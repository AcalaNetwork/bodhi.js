  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${file}"
    },
    {
      "name": "truffle",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/kreatr-contracts/node_modules/truffle/build/cli.bundled.js",
      "args": ["migrate", "--network", "mandala", "--reset"],
      "cwd": "${workspaceRoot}/kreatr-contracts",
      "outFiles": ["${workspaceRoot}/kreatr-contracts/migrations/*"]
    }
  ]
}
