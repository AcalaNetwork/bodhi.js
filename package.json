{
  "name": "bodhi.js-monorepo",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:AcalaNetwork/bodhi.js.git",
  "author": "Acala Developers <hello@acala.network>",
  "license": "Apache-2.0",
  "packageManager": "yarn@3.2.4",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/waffle/*"
  ],
  "scripts": {
    "clean": "yarn workspaces foreach -pt --include \"@acala-network/*\" run clean",
    "build": "yarn workspaces foreach -pt --include \"@acala-network/*\" run build",
    "lint": "tsc --noEmit --project tsconfig.json && eslint . --ext .js,.ts",
    "fix": "eslint . --ext .js,.ts --fix",
    "test:all": "yarn workspaces foreach -pt run test",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "resolutions": {
    "@acala-network/contracts": "4.3.4"
  },
  "devDependencies": {
    "@swc/core": "^1.3.46",
    "@types/eslint": "^8",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4",
    "unplugin-swc": "^1.3.2",
    "vite-tsconfig-paths": "^4.0.8",
    "vitest": "^0.29.8"
  },
  "exports": {
    ".": "./lib/index.js",
    "./*": "./lib/*.js",
    "./package.json": "./package.json"
  }
}
