{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": ["src", "/node_modules"],

    "declaration": true,
    "declarationMap": true,

    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "@acala-network/eth-providers": ["../eth-providers/src/index.ts"],
      "@acala-network/eth-providers/utils": ["../eth-providers/src/utils/index.ts"],
      "@acala-network/eth-transactions": ["../eth-transactions/src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "**/__tests__"]
}
