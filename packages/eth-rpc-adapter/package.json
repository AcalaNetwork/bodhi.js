{
  "name": "@acala-network/eth-rpc-adapter",
  "version": "2.7.2",
  "license": "MIT",
  "author": "Acala Developers <hello@acala.network>",
  "bin": "./bin/eth-rpc-adapter.js",
  "scripts": {
    "clean": "rm -rf lib tsconfig.tsbuildinfo",
    "build": "tsc --build tsconfig.json",
    "test:e2e": "SKIP_PUBLIC=true vitest --run --config vitest.config.e2e.ts",
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev": "ts-node-dev -T -r tsconfig-paths/register src/index.ts -l | pino-pretty --singleLine --colorize --ignore time,hostname,jsonrpc",
    "test:CI": "vitest --run --config vitest.config.e2e.ts",
    "ncc:pack": "ncc build src/index.ts -t --target es2020"
  },
  "peerDependencies": {
    "@polkadot/api": "^10.5.1"
  },
  "dependencies": {
    "@acala-network/eth-providers": "workspace:*",
    "@acala-network/eth-transactions": "workspace:*",
    "@ethersproject/abstract-provider": "~5.7.0",
    "@ethersproject/abstract-signer": "~5.7.0",
    "@ethersproject/address": "~5.7.0",
    "@ethersproject/bignumber": "~5.7.0",
    "@ethersproject/bytes": "~5.7.0",
    "@ethersproject/logger": "~5.7.0",
    "@ethersproject/wallet": "~5.7.0",
    "axios": "~0.24.0",
    "body-parser": "~1.19.0",
    "connect": "~3.7.0",
    "cors": "~2.8.5",
    "dd-trace": "~2.6.0",
    "ethers": "~5.7.0",
    "pino": "~7.0.0-rc.3",
    "ts-node-dev": "^2.0.0",
    "ws": "~8.2.3",
    "yargs": "16.2.0"
  },
  "devDependencies": {
    "@acala-network/contracts": "4.3.4",
    "@ethersproject/contracts": "~5.7.0",
    "@ethersproject/providers": "~5.7.0",
    "@types/body-parser": "~1.19.1",
    "@types/connect": "~3.4.35",
    "@types/cors": "~2.8.12",
    "@types/node": "~20.1.0",
    "@types/ws": "~8.2.0",
    "@types/yargs": "^16.0.4",
    "@vercel/ncc": "^0.36.1",
    "pino-pretty": "~7.0.1",
    "ts-node": "~10.7.0",
    "typescript": "~4.6.3",
    "vitest": "^0.31.0"
  },
  "files": [
    "lib",
    "bin"
  ],
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./*": {
      "types": "./lib/*.d.ts",
      "default": "./lib/*.js"
    },
    "./package.json": "./package.json"
  }
}
